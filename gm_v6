-- ============================================
-- DEVICE DETECTION & RESPONSIVE UTILITIES
-- ============================================

local function DetectDevice()
    local viewportSize = workspace.CurrentCamera.ViewportSize
    GUI.ScreenSize = viewportSize
    
    -- Mobile: < 600px width or touch-only
    if viewportSize.X < 600 or (UserInputService.TouchEnabled and not UserInputService.KeyboardEnabled and not UserInputService.GamepadEnabled) then
        GUI.IsMobile = true
        GUI.IsTablet = false
        print("[GUI] ðŸ“± Mobile detected:", viewportSize.X, "x", viewportSize.Y)
    -- Tablet: 600-1024px width with touch
    elseif viewportSize.X >= 600 and viewportSize.X < 1024 and UserInputService.TouchEnabled then
        GUI.IsMobile = false
        GUI.IsTablet = true
        print("[GUI] ðŸ“± Tablet detected:", viewportSize.X, "x", viewportSize.Y)
    else
        GUI.IsMobile = false
        GUI.IsTablet = false
        print("[GUI] ðŸ–¥ï¸ Desktop detected:", viewportSize.X, "x", viewportSize.Y)
    end
end

local function GetResponsiveValue(desktopValue, mobileValue, tabletValue)
    if GUI.IsMobile then
        return mobileValue or (desktopValue * 0.6)
    elseif GUI.IsTablet then
        return tabletValue or (desktopValue * 0.8)
    else
        return desktopValue
    end
end

-- ============================================
-- HELPER FUNCTIONS
-- ============================================

function GUI.AddConnection(connection)
    if connection then
        table.insert(GUI.Connections, connection)
    end
    return connection
end

function GUI.AddTask(taskThread)
    if taskThread then
        table.insert(GUI.Tasks, taskThread)
    end
    return taskThread
end

local function Tween(object, properties, duration, style, direction, callback)
    if not object or not object.Parent then return nil end
    
    local success, tween = pcall(function()
        return TweenService:Create(
            object,
            TweenInfo.new(
                duration or 0.4,
                style or Enum.EasingStyle.Quart,
                direction or Enum.EasingDirection.Out
            ),
            properties
        )
    end)
    
    if not success or not tween then return nil end
    
    table.insert(GUI.RunningTweens, tween)
    
    tween.Completed:Connect(function()
        local index = table.find(GUI.RunningTweens, tween)
        if index then
            table.remove(GUI.RunningTweens, index)
        end
        if callback then callback() end
    end)
    
    pcall(function() tween:Play() end)
    return tween
end

-- ============================================
-- ENHANCED ICON SYSTEM
-- ============================================

local Icons = {}

function Icons.Create(parent, iconType, size, color)
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, size, 0, size)
    frame.BackgroundTransparency = 1
    frame.Parent = parent
    
    local canvas = Instance.new("Frame")
    canvas.Size = UDim2.new(1, 0, 1, 0)
    canvas.BackgroundTransparency = 1
    canvas.Parent = frame
    
    color = color or GUI.Colors.Primary
    
    if iconType == "target" then
        -- Crosshair target with enhanced design
        local circle = Instance.new("Frame")
        circle.Size = UDim2.new(0.75, 0, 0.75, 0)
        circle.Position = UDim2.new(0.125, 0, 0.125, 0)
        circle.BackgroundTransparency = 1
        circle.BorderSizePixel = 0
        circle.Parent = canvas
        
        local outerRing = Instance.new("UIStroke")
        outerRing.Color = color
        outerRing.Thickness = 3
        outerRing.Parent = circle
        
        local corner = Instance.new("UICorner")
        corner.CornerRadius = UDim.new(1, 0)
        corner.Parent = circle
        
        -- Inner ring
        local innerCircle = Instance.new("Frame")
        innerCircle.Size = UDim2.new(0.45, 0, 0.45, 0)
        innerCircle.Position = UDim2.new(0.275, 0, 0.275, 0)
        innerCircle.BackgroundTransparency = 1
        innerCircle.BorderSizePixel = 0
        innerCircle.Parent = canvas
        
        local innerRing = Instance.new("UIStroke")
        innerRing.Color = color
        innerRing.Thickness = 2
        innerRing.Transparency = 0.4
        innerRing.Parent = innerCircle
        
        local innerCorner = Instance.new("UICorner")
        innerCorner.CornerRadius = UDim.new(1, 0)
        innerCorner.Parent = innerCircle
        
        -- Center dot
        local dot = Instance.new("Frame")
        dot.Size = UDim2.new(0.18, 0, 0.18, 0)
        dot.Position = UDim2.new(0.41, 0, 0.41, 0)
        dot.BackgroundColor3 = color
        dot.BorderSizePixel = 0
        dot.Parent = canvas
        
        local dotCorner = Instance.new("UICorner")
        dotCorner.CornerRadius = UDim.new(1, 0)
        dotCorner.Parent = dot
        
        -- Crosshair lines
        for i = 0, 3 do
            local line = Instance.new("Frame")
            line.Size = UDim2.new(0, 2, 0.12, 0)
            line.Position = UDim2.new(0.5, -1, 0.5, 0)
            line.AnchorPoint = Vector2.new(0.5, 0.5)
            line.BackgroundColor3 = color
            line.BorderSizePixel = 0
            line.Rotation = i * 90
            line.Parent = canvas
            
            local lineCorner = Instance.new("UICorner")
            lineCorner.CornerRadius = UDim.new(1, 0)
            lineCorner.Parent = line
            
            -- Position lines outside the circle
            if i == 0 then line.Position = UDim2.new(0.5, -1, 0.12, 0)
            elseif i == 1 then line.Position = UDim2.new(0.88, -1, 0.5, 0)
            elseif i == 2 then line.Position = UDim2.new(0.5, -1, 0.88, 0)
            else line.Position = UDim2.new(0.12, -1, 0.5, 0) end
        end
        
    elseif iconType == "status" then
        -- Signal bars with enhanced spacing
        local positions = {0.12, 0.415, 0.71}
        local heights = {0.42, 0.68, 0.52}
        
        for i = 1, 3 do
            local bar = Instance.new("Frame")
            bar.Size = UDim2.new(0.16, 0, heights[i], 0)
            bar.Position = UDim2.new(positions[i], 0, 0.5, 0)
            bar.AnchorPoint = Vector2.new(0, 0.5)
            bar.BackgroundColor3 = color
            bar.BorderSizePixel = 0
            bar.Parent = canvas
            
            local corner = Instance.new("UICorner")
            corner.CornerRadius = UDim.new(0.3, 0)
            corner.Parent = bar
            
            -- Add glow effect
            local glow = Instance.new("UIStroke")
            glow.Color = color
            glow.Thickness = 1
            glow.Transparency = 0.7
            glow.Parent = bar
        end
        
    elseif iconType == "bounty" then
        -- Enhanced diamond/gem icon
        local top = Instance.new("Frame")
        top.Size = UDim2.new(0.5, 0, 0.32, 0)
        top.Position = UDim2.new(0.25, 0, 0.15, 0)
        top.BackgroundColor3 = color
        top.BorderSizePixel = 0
        top.Rotation = 45
        top.Parent = canvas
        
        local topGlow = Instance.new("UIStroke")
        topGlow.Color = color
        topGlow.Thickness = 1.5
        topGlow.Transparency = 0.6
        topGlow.Parent = top
        
        local bottom = Instance.new("Frame")
        bottom.Size = UDim2.new(0.5, 0, 0.42, 0)
        bottom.Position = UDim2.new(0.25, 0, 0.45, 0)
        bottom.BackgroundColor3 = color
        bottom.BorderSizePixel = 0
        bottom.Rotation = 45
        bottom.Parent = canvas
        
        local bottomGlow = Instance.new("UIStroke")
        bottomGlow.Color = color
        bottomGlow.Thickness = 1.5
        bottomGlow.Transparency = 0.6
        bottomGlow.Parent = bottom
        
        -- Add shine effect
        local shine = Instance.new("Frame")
        shine.Size = UDim2.new(0.15, 0, 0.25, 0)
        shine.Position = UDim2.new(0.35, 0, 0.25, 0)
        shine.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
        shine.BackgroundTransparency = 0.5
        shine.BorderSizePixel = 0
        shine.Rotation = 45
        shine.Parent = canvas
        
    elseif iconType == "time" then
        -- Enhanced clock with tick marks
        local circle = Instance.new("Frame")
        circle.Size = UDim2.new(0.9, 0, 0.9, 0)
        circle.Position = UDim2.new(0.05, 0, 0.05, 0)
        circle.BackgroundTransparency = 1
        circle.BorderSizePixel = 0
        circle.Parent = canvas
        
        local stroke = Instance.new("UIStroke")
        stroke.Color = color
        stroke.Thickness = 3
        stroke.Parent = circle
        
        local corner = Instance.new("UICorner")
        corner.CornerRadius = UDim.new(1, 0)
        corner.Parent = circle
        
        -- Tick marks
        for i = 0, 11 do
            local tick = Instance.new("Frame")
            tick.Size = UDim2.new(0, 2, 0.08, 0)
            tick.Position = UDim2.new(0.5, -1, 0.08, 0)
            tick.AnchorPoint = Vector2.new(0.5, 0)
            tick.BackgroundColor3 = color
            tick.BackgroundTransparency = i % 3 == 0 and 0 or 0.5
            tick.BorderSizePixel = 0
            tick.Parent = circle
            
