            eye.Position = UDim2.new(0.26 + (i-1) * 0.3, 0, 0.32, 0)
            eye.BackgroundColor3 = GUI.Colors.Background
            eye.BorderSizePixel = 0
            eye.Parent = canvas
            
            local eyeCorner = Instance.new("UICorner")
            eyeCorner.CornerRadius = UDim.new(1, 0)
            eyeCorner.Parent = eye
            
            local eyeGlow = Instance.new("UIStroke")
            eyeGlow.Color = color
            eyeGlow.Thickness = 1
            eyeGlow.Transparency = 0.5
            eyeGlow.Parent = eye
        end
        
        -- Nose
        local nose = Instance.new("Frame")
        nose.Size = UDim2.new(0.1, 0, 0.1, 0)
        nose.Position = UDim2.new(0.45, 0, 0.52, 0)
        nose.BackgroundColor3 = GUI.Colors.Background
        nose.BorderSizePixel = 0
        nose.Rotation = 45
        nose.Parent = canvas
        
    elseif iconType == "zap" then
