            local ring = Instance.new("Frame")
            ring.Size = UDim2.new(wave.size, 0, wave.size, 0)
            ring.Position = UDim2.new(wave.pos, 0, wave.pos, 0)
            ring.BackgroundTransparency = 1
            ring.BorderSizePixel = 0
            ring.Parent = canvas
            
            local stroke = Instance.new("UIStroke")
            stroke.Color = color
            stroke.Thickness = 2.5
            stroke.Transparency = 1 - wave.alpha
            stroke.Parent = ring
            
            local corner = Instance.new("UICorner")
            corner.CornerRadius = UDim.new(1, 0)
            corner.Parent = ring
        end
        
        local center = Instance.new("Frame")
        center.Size = UDim2.new(0.25, 0, 0.25, 0)
        center.Position = UDim2.new(0.375, 0, 0.375, 0)
        center.BackgroundColor3 = color
        center.BorderSizePixel = 0
        center.Parent = canvas
        
        local centerCorner = Instance.new("UICorner")
        centerCorner.CornerRadius = UDim.new(1, 0)
        centerCorner.Parent = center
        
    elseif iconType == "bounty" then
        -- Dollar sign styled
        local topCurve = Instance.new("Frame")
        topCurve.Size = UDim2.new(0.5, 0, 0.25, 0)
        topCurve.Position = UDim2.new(0.25, 0, 0.15, 0)
        topCurve.BackgroundTransparency = 1
        topCurve.BorderSizePixel = 0
        topCurve.Parent = canvas
        
        local topStroke = Instance.new("UIStroke")
        topStroke.Color = color
        topStroke.Thickness = 3
        topStroke.Parent = topCurve
        
        local topCorner = Instance.new("UICorner")
        topCorner.CornerRadius = UDim.new(0.5, 0)
        topCorner.Parent = topCurve
        
        local bottomCurve = topCurve:Clone()
