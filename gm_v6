-- ============================================
-- IMAGE/GIF LOADING FROM GITHUB
-- ============================================

local function LoadMediaFromGitHub(mediaName, imageLabel, onComplete)
    GUI.AddTask(task.spawn(function()
        pcall(function()
            local asset = getcustomasset or getsynasset
            if not asset then return end
            if not isfolder then return end
            
            if not isfolder(WORKSPACE_FOLDER) then
                makefolder(WORKSPACE_FOLDER)
            end
            
            local path = WORKSPACE_FOLDER .. "/" .. mediaName
            
            if not isfile(path) then
                local success, mediaData = pcall(function()
                    return game:HttpGet(ASSETS_REPO .. mediaName, true)
                end)
                
                if success and mediaData and #mediaData > 0 then
                    writefile(path, mediaData)
                end
            end
            
            if isfile(path) then
                local assetUrl = asset(path)
                if imageLabel and imageLabel.Parent then
                    imageLabel.Image = assetUrl
                    
                    if onComplete then
                        onComplete()
                    end
                end
            end
        end)
    end))
end

-- ============================================
-- MUSIC STATE
-- ============================================

function GUI.SaveMusicState()
    if not GUI.MusicSound then return end
    
    pcall(function()
        if GUI.MusicSound.IsPlaying and writefile then
            local timePos = GUI.MusicSound.TimePosition
            if timePos and type(timePos) == "number" and timePos > 0 then
                writefile(TIME_PATH, tostring(timePos))
            end
        end
    end)
end

-- ============================================
-- MINIMAL LOADING (LEFT SIDE)
-- ============================================

function GUI.CreateMinimalLoader()
    local loaderWidth = GetResponsiveValue(280, 200, 240)
    local loaderHeight = GetResponsiveValue(140, 100, 120)
    
    local LoaderFrame = Instance.new("Frame")
    LoaderFrame.Name = "MinimalLoader"
    LoaderFrame.Size = UDim2.new(0, loaderWidth, 0, loaderHeight)
    LoaderFrame.Position = UDim2.new(0, 25, 0.5, -loaderHeight/2)
    LoaderFrame.BackgroundColor3 = GUI.Colors.Surface
    LoaderFrame.BorderSizePixel = 0
    LoaderFrame.ZIndex = 10000
    LoaderFrame.Parent = GUI.SkibidiGui
    
    local Corner = Instance.new("UICorner")
    Corner.CornerRadius = UDim.new(0, 16)
    Corner.Parent = LoaderFrame
    
    local Stroke = Instance.new("UIStroke")
    Stroke.Color = GUI.Colors.Primary
    Stroke.Thickness = 2
    Stroke.Transparency = 0.5
    Stroke.Parent = LoaderFrame
    
    local titleSize = GetResponsiveValue(20, 14, 17)
    local Title = Instance.new("TextLabel")
    Title.Text = "SKIBIDI"
    Title.Size = UDim2.new(1, -20, 0, titleSize + 10)
    Title.Position = UDim2.new(0, 10, 0, 15)
    Title.BackgroundTransparency = 1
    Title.Font = Enum.Font.GothamBold
    Title.TextColor3 = GUI.Colors.Primary
    Title.TextSize = titleSize
    Title.TextXAlignment = Enum.TextXAlignment.Left
    Title.ZIndex = 10001
    Title.Parent = LoaderFrame
    
    local subtitleSize = GetResponsiveValue(11, 9, 10)
    local Subtitle = Instance.new("TextLabel")
    Subtitle.Text = "v7.0 Enhanced"
    Subtitle.Size = UDim2.new(1, -20, 0, subtitleSize + 8)
    Subtitle.Position = UDim2.new(0, 10, 0, titleSize + 22)
    Subtitle.BackgroundTransparency = 1
    Subtitle.Font = Enum.Font.Gotham
    Subtitle.TextColor3 = GUI.Colors.TextMuted
    Subtitle.TextSize = subtitleSize
    Subtitle.TextXAlignment = Enum.TextXAlignment.Left
    Subtitle.ZIndex = 10001
    Subtitle.Parent = LoaderFrame
    
    local ProgressBg = Instance.new("Frame")
    ProgressBg.Size = UDim2.new(1, -20, 0, 4)
    ProgressBg.Position = UDim2.new(0, 10, 1, -35)
    ProgressBg.BackgroundColor3 = GUI.Colors.SurfaceLight
    ProgressBg.BorderSizePixel = 0
    ProgressBg.ZIndex = 10001
    ProgressBg.Parent = LoaderFrame
    
    local ProgressCorner = Instance.new("UICorner")
    ProgressCorner.CornerRadius = UDim.new(1, 0)
    ProgressCorner.Parent = ProgressBg
    
    local Progress = Instance.new("Frame")
    Progress.Size = UDim2.new(0, 0, 1, 0)
    Progress.BackgroundColor3 = GUI.Colors.Primary
    Progress.BorderSizePixel = 0
    Progress.ZIndex = 10002
    Progress.Parent = ProgressBg
    
    local ProgressCorner2 = Instance.new("UICorner")
    ProgressCorner2.CornerRadius = UDim.new(1, 0)
    ProgressCorner2.Parent = Progress
    
    local statusSize = GetResponsiveValue(10, 8, 9)
    local Status = Instance.new("TextLabel")
    Status.Text = "Loading..."
    Status.Size = UDim2.new(1, -20, 0, statusSize + 6)
    Status.Position = UDim2.new(0, 10, 1, -20)
    Status.BackgroundTransparency = 1
    Status.Font = Enum.Font.Gotham
    Status.TextColor3 = GUI.Colors.TextMuted
    Status.TextSize = statusSize
    Status.TextXAlignment = Enum.TextXAlignment.Left
    Status.ZIndex = 10001
    Status.Parent = LoaderFrame
    
    -- Entrance animation
    LoaderFrame.Size = UDim2.new(0, 0, 0, loaderHeight)
    Tween(LoaderFrame, {Size = UDim2.new(0, loaderWidth, 0, loaderHeight)}, 0.5, Enum.EasingStyle.Back)
    
    return {
        Frame = LoaderFrame,
        Progress = Progress,
        Status = Status,
        Update = function(progress, statusText)
            if Status and Status.Parent then
                Status.Text = statusText or "Loading..."
            end
            if Progress and Progress.Parent then
                Tween(Progress, {Size = UDim2.new(progress, 0, 1, 0)}, 0.3)
            end
        end,
        Complete = function()
            if not LoaderFrame or not LoaderFrame.Parent then return end
            
            task.wait(0.3)
            Tween(LoaderFrame, {Size = UDim2.new(0, 0, 0, loaderHeight)}, 0.4, Enum.EasingStyle.Back)
            Tween(LoaderFrame, {BackgroundTransparency = 1}, 0.4)
            Tween(Stroke, {Transparency = 1}, 0.4)
            
            for _, child in pairs(LoaderFrame:GetDescendants()) do
                if child:IsA("TextLabel") or child:IsA("Frame") then
                    pcall(function()
                        if child.TextTransparency then
                            Tween(child, {TextTransparency = 1}, 0.4)
                        else
                            Tween(child, {BackgroundTransparency = 1}, 0.4)
                        end
                    end)
                end
            end
            
            task.wait(0.5)
            if LoaderFrame and LoaderFrame.Parent then
                LoaderFrame:Destroy()
            end
        end
    }
end

-- ============================================
-- ASSET INITIALIZATION
-- ============================================

function GUI.InitAssets()
    local loader = GUI.CreateMinimalLoader()
    if not loader then return end
    
    loader.Update(0.2, "Initializing...")
    
    pcall(function()
        if makefolder and not isfolder(WORKSPACE_FOLDER) then
            makefolder(WORKSPACE_FOLDER)
        end
    end)
    
    task.wait(0.2)
    loader.Update(0.5, "Loading audio...")
    
    pcall(function()
        GUI.MusicSound = Instance.new("Sound")
        GUI.MusicSound.Name = "SkibidiMusic"
        GUI.MusicSound.Looped = true
        GUI.MusicSound.Volume = GUI.Config.MusicVolume
        GUI.MusicSound.Parent = SoundService
    end)
    
    GUI.AddTask(task.spawn(function()
        pcall(function()
            local asset = getcustomasset or getsynasset
            if not asset then return end
            
            if isfile and not isfile(MUSIC_PATH) then
                if writefile then
                    local httpSuccess, musicData = pcall(function()
                        return game:HttpGet(ASSETS_REPO .. MUSIC_FILENAME, true)
                    end)
                    
                    if httpSuccess and musicData then
                        writefile(MUSIC_PATH, musicData)
                    end
                end
            end
            
            if isfile and isfile(MUSIC_PATH) and GUI.MusicSound then
                local assetUrl = asset(MUSIC_PATH)
                GUI.MusicSound.SoundId = assetUrl
                
                if isfile(TIME_PATH) and readfile then
                    local savedTimeStr = readfile(TIME_PATH)
                    local savedTime = tonumber(savedTimeStr)
                    if savedTime and savedTime > 0 then
                        GUI.MusicSound.TimePosition = savedTime
                    end
                end
                
                GUI.MusicSound:Play()
            end
        end)
    end))
    
    task.wait(0.3)
    loader.Update(0.8, "Ready...")
    
    if GUI.BackgroundImage then
        LoadMediaFromGitHub(BG_FILENAME, GUI.BackgroundImage)
    end
    
    task.wait(0.3)
    loader.Update(1, "Complete!")
    task.wait(0.2)
    loader.Complete()
    
    local teleportConnection = Players.LocalPlayer.OnTeleport:Connect(function()
        GUI.SaveMusicState()
    end)
    GUI.AddConnection(teleportConnection)
end

-- ============================================
-- FAST MODE TOP DISPLAY - CENTERED WITH GIF
-- ============================================

function GUI.CreateFastModeTopDisplay()
    if GUI.FastModeTopDisplay then
        GUI.FastModeTopDisplay:Destroy()
    end
    
    local displayWidth = GetResponsiveValue(400, 280, 340)
    local displayHeight = GetResponsiveValue(120, 90, 105)
    
    local Display = Instance.new("Frame")
    Display.Name = "FastModeDisplay"
    Display.Size = UDim2.new(0, displayWidth, 0, displayHeight)
    Display.Position = UDim2.new(0.5, -displayWidth/2, 0, 30)
    Display.BackgroundColor3 = GUI.Colors.Surface
    Display.BorderSizePixel = 0
    Display.ZIndex = 30000
    Display.Parent = GUI.SkibidiGui
    
    local Corner = Instance.new("UICorner")
    Corner.CornerRadius = UDim.new(0, 16)
    Corner.Parent = Display
    
    local Glow = Instance.new("UIStroke")
    Glow.Color = GUI.Colors.Primary
    Glow.Thickness = 3
    Glow.Transparency = 0
    Glow.Parent = Display
    
    -- Animated gradient background
    local Gradient = Instance.new("UIGradient")
    Gradient.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, GUI.Colors.Primary),
        ColorSequenceKeypoint.new(0.5, GUI.Colors.Accent1),
        ColorSequenceKeypoint.new(1, GUI.Colors.Primary)
    }
    Gradient.Rotation = 45
    Gradient.Parent = Glow
    
    -- GIF Background
    local GifBg = Instance.new("ImageLabel")
    GifBg.Size = UDim2.new(1, 0, 1, 0)
    GifBg.BackgroundTransparency = 1
    GifBg.ImageTransparency = 0.85
    GifBg.ScaleType = Enum.ScaleType.Crop
    GifBg.ZIndex = 30001
    GifBg.Parent = Display
    
    local GifCorner = Instance.new("UICorner")
    GifCorner.CornerRadius = UDim.new(0, 16)
    GifCorner.Parent = GifBg
    
    LoadMediaFromGitHub(FAST_MODE_GIF, GifBg)
    
    -- Icon
    local iconSize = GetResponsiveValue(36, 26, 31)
    local Icon = Icons.Create(Display, "zap", iconSize, GUI.Colors.Warning)
    Icon.Position = UDim2.new(0, 20, 0.5, -iconSize/2)
    Icon.ZIndex = 30002
    
    -- Text container
    local TextContainer = Instance.new("Frame")
    TextContainer.Size = UDim2.new(1, -iconSize - 50, 1, 0)
    TextContainer.Position = UDim2.new(0, iconSize + 30, 0, 0)
    TextContainer.BackgroundTransparency = 1
    TextContainer.ZIndex = 30002
    TextContainer.Parent = Display
    
    local titleSize = GetResponsiveValue(24, 17, 20)
    local Title = Instance.new("TextLabel")
    Title.Text = "âš¡ FAST MODE ACTIVE"
    Title.Size = UDim2.new(1, 0, 0, titleSize + 10)
    Title.Position = UDim2.new(0, 0, 0, 15)
    Title.BackgroundTransparency = 1
    Title.Font = Enum.Font.GothamBold
    Title.TextColor3 = GUI.Colors.Warning
    Title.TextSize = titleSize
    Title.TextXAlignment = Enum.TextXAlignment.Left
    Title.ZIndex = 30003
    Title.Parent = TextContainer
    
    local subtitleSize = GetResponsiveValue(13, 10, 11)
    local Subtitle = Instance.new("TextLabel")
    Subtitle.Text = "Maximum Performance Mode"
    Subtitle.Size = UDim2.new(1, 0, 0, subtitleSize + 8)
    Subtitle.Position = UDim2.new(0, 0, 1, -subtitleSize - 22)
    Subtitle.BackgroundTransparency = 1
    Subtitle.Font = Enum.Font.Gotham
    Subtitle.TextColor3 = GUI.Colors.Text
    Subtitle.TextSize = subtitleSize
    Subtitle.TextXAlignment = Enum.TextXAlignment.Left
    Subtitle.ZIndex = 30003
    Subtitle.Parent = TextContainer
    
    -- Stats mini display
    local statsSize = GetResponsiveValue(11, 9, 10)
    local Stats = Instance.new("TextLabel")
    Stats.Text = "FPS Boost | Reduced Quality"
    Stats.Size = UDim2.new(1, 0, 0, statsSize + 6)
    Stats.Position = UDim2.new(0, 0, 1, -statsSize - 10)
    Stats.BackgroundTransparency = 1
    Stats.Font = Enum.Font.GothamMedium
    Stats.TextColor3 = GUI.Colors.TextMuted
    Stats.TextSize = statsSize
    Stats.TextXAlignment = Enum.TextXAlignment.Left
    Stats.ZIndex = 30003
    Stats.Parent = TextContainer
    
    -- Pulse animation
    GUI.AddTask(task.spawn(function()
        while Display and Display.Parent do
            Tween(Glow, {Transparency = 0.5}, 1.2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut)
            task.wait(1.2)
            if not Display or not Display.Parent then break end
            Tween(Glow, {Transparency = 0}, 1.2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut)
            task.wait(1.2)
        end
    end))
    
    -- Entrance animation
    Display.Position = UDim2.new(0.5, -displayWidth/2, 0, -displayHeight - 30)
    Tween(Display, {Position = UDim2.new(0.5, -displayWidth/2, 0, 30)}, 0.8, Enum.EasingStyle.Back)
    
    GUI.FastModeTopDisplay = Display
    return Display
end

function GUI.RemoveFastModeTopDisplay()
    if not GUI.FastModeTopDisplay or not GUI.FastModeTopDisplay.Parent then return end
    
    local display = GUI.FastModeTopDisplay
    local currentPos = display.Position
    
    Tween(display, {
        Position = UDim2.new(currentPos.X.Scale, currentPos.X.Offset, 0, -display.Size.Y.Offset - 30)
    }, 0.6, Enum.EasingStyle.Back, Enum.EasingDirection.In, function()
        if display and display.Parent then
            display:Destroy()
        end
    end)
    
    GUI.FastModeTopDisplay = nil
end

-- ============================================
-- MAIN GUI - LEFT SIDE PANEL
-- ============================================

function GUI.CreateMainGUI()
    if GUI.SkibidiGui then
        GUI.Cleanup()
    end
    
    local lp = Players.LocalPlayer
    if not lp then return nil end
    
    DetectDevice()
    
