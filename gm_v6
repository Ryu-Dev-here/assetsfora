        local leftCorner = Instance.new("UICorner")
        leftCorner.CornerRadius = UDim.new(0.5, 0)
        leftCorner.Parent = leftLine
        
        local rightLine = leftLine:Clone()
        rightLine.Position = UDim2.new(0.7, 0, 0.5, -lineThickness/2)
        rightLine.Parent = canvas
        
    elseif iconType == "status" then
        -- Pulse waves icon
        local waves = {
            {size = 0.35, pos = 0.325, alpha = 1},
            {size = 0.55, pos = 0.225, alpha = 0.6},
            {size = 0.75, pos = 0.125, alpha = 0.3}
        }
        
